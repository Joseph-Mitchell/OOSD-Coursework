<Window x:Class="Student_Records_System.ValidationError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Student_Records_System"
        mc:Ignorable="d"
        Title="Validation Error" Height="110" Width="185" ResizeMode="NoResize" Topmost="True">
    <Grid>
        <Label x:Name="lbl_error" Content="" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Foreground="#FFC80000"/>
        <Button x:Name="btn_ok" Content="Ok" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="76" Click="CloseWindow"/>

    </Grid>
</Window>

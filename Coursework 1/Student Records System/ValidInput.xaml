<Window x:Class="Student_Records_System.ValidInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Valid Input" Height="110" Width="170" ResizeMode="NoResize" Topmost="True">
    <Grid>
        <Label x:Name="lbl_valid" Content="All input entered was valid." HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Foreground="#FF00C800"/>
        <Button x:Name="btn_ok" Content="Ok" HorizontalAlignment="Center" Margin="0,0,0,15" VerticalAlignment="Bottom" Width="76" Click="CloseWindow"/>
    </Grid>
</Window>
